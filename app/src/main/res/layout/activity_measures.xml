<?xml version="1.0" encoding="utf-8"?>
<!-- activity_disease_info.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeasuresActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Paddy classifier"
        android:id="@+id/title"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logoImg"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/causeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImg"
        android:layout_marginTop="20dp"
        android:text="CAUSE:" />

    <TextView
        android:id="@+id/symptomsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/causeTextView"
        android:layout_marginTop="16dp"
        android:text="SYMPTOMS:" />

    <TextView
        android:id="@+id/impactTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/symptomsTextView"
        android:layout_marginTop="16dp"
        android:text="IMPACT:" />

    <TextView
        android:id="@+id/measuresTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/impactTextView"
        android:layout_marginTop="16dp"
        android:text="MEASURES:" />


</RelativeLayout>
